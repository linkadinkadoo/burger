
    <main>
    <div class="container">
        <br>
        <div class="span12" id="form">
            <div class='row'>
                <div class="form-group ion-text col-sm">

                </div>

                <div class="form-group ion-text col-sm">
                    <ul>
                        {{#each burgers}}
                          {{#unless this.devoured}}
                            <li>
                                {{this.id}}
                              {{this.burger_name}}
          
                              <form action="/{{this.id}}?_method=PUT" method="POST">
                                <input type="hidden" name="devoured" value="true">
                                <button class="btn-primary" type="submit">Devour It!</button>
                              </form>
          
                            </li>
                          {{/unless}}
                        {{/each}}
                      </ul>
                </div>

                <div class="form-group ion-text col-sm">
                    <form>
                        <div class="form-group">
                            <label for="">Burger Name</label>
                            <input type="text" name="burger_name" id="burger-name" placeholder="">
                        </div>
                        <div class="form-check">
                        </div>
                        <div class="mx-auto" style="width: 100%">
                            <button type="submit" class="btn btn-primary">Add the burger</button>
                        </div>

                    </form>
                </div>

                <div class="form-group ion-text col-sm">
                    {{#each burgers}}
                    {{#if this.devoured}}
                      <li>
                          {{this.id}}
                        {{this.burger_name}}
    
                      </li>
                    {{/if}}
                  {{/each}}
                </div>
                <div class="form-group ion-text col-sm">

                </div>
            </div>
        </div>
    </div>
</main>
